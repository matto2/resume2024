---
import "../assets/styles/tailwind.css";
// Supports weights 200-900
import "@fontsource-variable/nunito";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Matthew O'Leary Resume</title>
  </head>
  <body class="min-h-screen bg-orange-50 text-slate-700">
    <div class="max-w-5xl mx-auto py-16 px-10 print:py-8">
      <body>
        <slot />
      </body>
    </div>
  </body>
</html>
